<Window x:Class="IUR_p07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IUR_p07"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="5">
            <TextBox Width="200"></TextBox>
            <Button Content="Add Location"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding WeatherCards}" >
            <!--
            Use these properties
            
            <ListBox.ItemsPanel>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
            </ListBox.ItemTemplate>
            
            use following custom control binding and dependency properties
            <local:WeatherCustomControl City="{Binding Location}" Temperature="{Binding Temperature}" Humidity="{Binding Humidity}" Conditions="{Binding Conditions}" Icon="{Binding IconPath}" Width="200"></local:WeatherCustomControl>
            
            -->
        </ListBox>
    </DockPanel>
</Window>
