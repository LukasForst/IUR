<Window x:Class="HW1.view.AddCityError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HW1.view"
        mc:Ignorable="d"
        Title="AddCityError" Height="180" Width="220">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" TextAlignment="Center" TextWrapping="Wrap">Chyba při nahrávání dat z OpenWeather.com, zadali jste jméno města správně?</TextBox>
        <Button Grid.Row="1" Height="30" Width="70" Margin="10" Click="ButtonBase_OnClick">Close</Button>
    </Grid>
</Window>
