<Window x:Class="ContactListTP.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ContactListTP.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel d:DataContext="{d:DesignInstance Type=viewModel:ContactListViewModel, IsDesignTimeCreatable=True}">
        <ListBox ItemsSource="{Binding ContactList}" SelectedIndex="{Binding SelectedContactItemIndex}"
                 SelectedItem="{Binding SelectedContactItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding DisplayedName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>

</Window>